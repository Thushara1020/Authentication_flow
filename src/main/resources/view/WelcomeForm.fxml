<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WelcomeFormController">
    <children>
        <Circle fill="#eef2ff" layoutX="544.0" layoutY="56.0" radius="100.0" stroke="TRANSPARENT" strokeType="INSIDE" />
        <Circle fill="#2563eb12" layoutX="56.0" layoutY="344.0" radius="74.0" stroke="TRANSPARENT" strokeType="INSIDE" />

        <VBox alignment="CENTER" layoutX="50.0" layoutY="100.0" prefHeight="200.0" prefWidth="500.0" spacing="10.0">
            <children>
                <Label text="Welcome !" textFill="#1e293b">
                    <font>
                        <Font name="System Bold" size="48.0" />
                    </font>
                </Label>

                <Label fx:id="txtFirstName" text="Thushara" textFill="#64748b">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#LogoutOnAction" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #2563eb; -fx-background-radius: 20; -fx-cursor: hand;" text="Logout" textFill="WHITE" translateY="20.0">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
